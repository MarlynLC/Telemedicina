@model Telemedicina.Models.Localidad.LocalAsistente
@{
    ViewData["Title"] = "Modificar Asignacion Localidad con Asistente Local";
}

<h1>Actualizar Asistente Local a una Localidad</h1>
<form method="post" action="LocalAsistenteM" class="mt-5">

    <div class="formu">
        <input type="hidden" class="form-control" asp-for="Id">

        <label for="" class="form-label">Nombre Asistente Local:</label>
        <select class="form-control" asp-for="AsistenteLID">
            @foreach (var doctores in Model.AsistentesLocales)
            {
                <option value="@doctores.Id">@doctores.Nombre @doctores.Apellidos</option>
            }
        </select>
        <br />
    </div>

    <div class="formu">
        <label for="" class="form-label">Localidad</label>
        <select class="form-control" asp-for="LocalidadID">
            @foreach (var complejos in Model.Localidades)
            {
                <option value="@complejos.Id">@complejos.Nombre</option>
            }
        </select>

    </div>

    <button type="submit" class="btn btn-primary">Actualizar Vinculacion</button>

    <button type="post" class="btn btn-secondary" asp-controller="Localidad" asp-action="back2">
        Cancelar
    </button>
</form>